@page
@model VWSR.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<h1 class="mb-3">Вход</h1>

<form method="post" asp-antiforgery="true" class="card p-3" style="max-width: 420px;">
    <div class="mb-2">
        <label class="form-label">Email</label>
        <input class="form-control" asp-for="Email" />
    </div>
    <div class="mb-3">
        <label class="form-label">Пароль</label>
        <input class="form-control" asp-for="Password" type="password" />
    </div>
    <button class="btn btn-primary" type="submit">Войти</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger mt-3">@Model.Error</div>
}
